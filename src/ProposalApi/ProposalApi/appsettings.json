{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_API_CLIENT_ID",
    "Audience": "api://YOUR_API_CLIENT_ID"
  },

  "ConnectionStrings": {
    "ProposalDb": "Server=tcp:YOUR_SERVER.database.windows.net,1433;Database=ProposalDb;Authentication=Active Directory Default;"
  },

  "BlobStorage": {
    "ServiceUrl": "https://YOUR_STORAGE_ACCOUNT.blob.core.windows.net",
    "TemplatesContainer": "templates",
    "OutputContainer": "generated-pdfs",
    "PriceImportContainer": "price-imports",
    "PriceImportFolder": "incoming"
  },

  "Aspose": {
    "LicensePath": ""
  },

  "ApplicationInsights": {
    "ConnectionString": "YOUR_APP_INSIGHTS_CONNECTION_STRING"
  }
}
