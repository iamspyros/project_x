@page
@model ProposalGenerator.Web.Pages.Templates.IndexModel
@{
    ViewData["Title"] = "Word Templates";
}

<div class="mb-4">
    <h1><i class="bi bi-palette me-2"></i>PDF Templates</h1>
    <p class="text-muted">Branded PDF templates are generated in code using QuestPDF â€” no external Word documents needed.</p>
</div>

<div class="row g-4">
    <!-- Available Templates -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-files me-2"></i>Available Templates</h5>
            </div>
            <div class="card-body">
                @if (Model.Templates.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var t in Model.Templates)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                    <strong>@t</strong>
                                </div>
                                <span class="badge bg-primary">Built-in</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-file-earmark-x display-4"></i>
                        <p class="mt-2">No templates available.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Info -->
    <div class="col-md-4">
        <div class="card h-100 border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>About Templates</h5>
            </div>
            <div class="card-body">
                <p class="small">Templates are Vodafone Business branded and built directly into the application.</p>
                <p class="small mb-0">To customise a template, edit <code>DocumentService.cs</code> in the project source.</p>
            </div>
        </div>
    </div>
</div>
