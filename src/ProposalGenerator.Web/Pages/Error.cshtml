@page
@model ProposalGenerator.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger"><i class="bi bi-exclamation-triangle"></i></h1>
    <h1>Error</h1>
    <h2 class="text-muted">An error occurred while processing your request.</h2>

    @if (Model.ShowRequestId)
    {
        <p class="mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-primary">
            <i class="bi bi-house me-2"></i>Return to Dashboard
        </a>
    </div>
</div>
