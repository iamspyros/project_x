@page "{id:int}"
@model ProposalGenerator.Web.Pages.Quotes.DetailsModel
@{
    ViewData["Title"] = $"Quote {Model.Quote.QuoteNumber}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-receipt me-2"></i>Quote Details</h1>
        <p class="text-muted mb-0">
            <code>@Model.Quote.QuoteNumber</code>
            @{
                var statusBadge = Model.Quote.Status switch
                {
                    QuoteStatus.Draft => "bg-secondary",
                    QuoteStatus.Preview => "bg-info",
                    QuoteStatus.Finalized => "bg-success",
                    QuoteStatus.Approved => "bg-primary",
                    QuoteStatus.Rejected => "bg-danger",
                    QuoteStatus.Expired => "bg-warning text-dark",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @statusBadge ms-2">@Model.Quote.Status</span>
        </p>
    </div>
    <div class="btn-group">
        @if (Model.Quote.Status == QuoteStatus.Draft)
        {
            <form method="post" asp-page-handler="Preview" class="d-inline">
                <input type="hidden" name="id" value="@Model.Quote.Id" />
                <button type="submit" class="btn btn-info">
                    <i class="bi bi-eye me-1"></i>Preview PDF
                </button>
            </form>
            <form method="post" asp-page-handler="Finalize" class="d-inline ms-1">
                <input type="hidden" name="id" value="@Model.Quote.Id" />
                <button type="submit" class="btn btn-success"
                        onclick="return confirm('Finalize this quote? This will generate the final PDF.');">
                    <i class="bi bi-check-circle me-1"></i>Finalize
                </button>
            </form>
        }
        @if (!string.IsNullOrEmpty(Model.Quote.GeneratedPdfPath))
        {
            <a href="/api/quotes/@Model.Quote.Id/pdf" target="_blank" class="btn btn-outline-success ms-1">
                <i class="bi bi-file-pdf me-1"></i>Download PDF
            </a>
        }
        @if (Model.Quote.Status == QuoteStatus.Draft)
        {
            <form method="post" asp-page-handler="Delete" class="d-inline ms-1">
                <input type="hidden" name="id" value="@Model.Quote.Id" />
                <button type="submit" class="btn btn-outline-danger"
                        onclick="return confirm('Delete this quote? This cannot be undone.');">
                    <i class="bi bi-trash me-1"></i>Delete
                </button>
            </form>
        }
        <a asp-page="/Quotes/Index" class="btn btn-outline-secondary ms-1">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- Customer & Quote Info -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-person me-2"></i>Customer</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Quote.CustomerName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(Model.Quote.CustomerEmail ?? "—")</dd>

                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">@(Model.Quote.CustomerCompany ?? "—")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Quote Info</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Valid Until</dt>
                    <dd class="col-sm-8">@Model.Quote.ValidUntil.ToString("dd MMMM yyyy")</dd>

                    <dt class="col-sm-4">Currency</dt>
                    <dd class="col-sm-8">@Model.Quote.Currency</dd>

                    <dt class="col-sm-4">Template</dt>
                    <dd class="col-sm-8">@(Model.Quote.TemplateName ?? "Default")</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.Quote.CreatedAt.ToString("dd MMM yyyy HH:mm") by @Model.Quote.CreatedBy</dd>

                    <dt class="col-sm-4">Version</dt>
                    <dd class="col-sm-8">@Model.Quote.Version</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Quote.Notes))
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-sticky me-2"></i>Notes</h5>
        </div>
        <div class="card-body">
            <p class="mb-0">@Model.Quote.Notes</p>
        </div>
    </div>
}

<!-- Pricing Table -->
<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-table me-2"></i>Pricing Matrix</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>SKU</th>
                        <th>Commitment</th>
                        <th>Billing</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-center">Qty</th>
                        <th class="text-end">Discount</th>
                        <th class="text-end">Line Total</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int row = 1; }
                    @foreach (var li in Model.Quote.LineItems)
                    {
                        <tr>
                            <td>@row</td>
                            <td><strong>@li.ProductName</strong></td>
                            <td><code>@li.Sku</code></td>
                            <td>@(li.CommitmentTerm ?? "—")</td>
                            <td>@(li.BillingFrequency ?? "—")</td>
                            <td class="text-end">@li.UnitPrice.ToString("N2")</td>
                            <td class="text-center">@li.Quantity</td>
                            <td class="text-end">
                                @if (li.DiscountPercent.HasValue && li.DiscountPercent > 0)
                                {
                                    <span class="text-success">@li.DiscountPercent.Value.ToString("N1")%</span>
                                }
                                else
                                {
                                    <span>—</span>
                                }
                            </td>
                            <td class="text-end fw-bold">@li.LineTotal.ToString("N2") @li.Currency</td>
                        </tr>
                        row++;
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="8" class="text-end"><strong>Total:</strong></td>
                        <td class="text-end">
                            <strong class="fs-5">@Model.Quote.TotalAmount.ToString("N2") @Model.Quote.Currency</strong>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
